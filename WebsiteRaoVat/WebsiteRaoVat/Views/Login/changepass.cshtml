@model WebsiteRaoVat.Models.TaiKhoan
@{
    ViewBag.Title = "changepass";
}
<style>

    #popup_pass {
        position: fixed;
        background-color: rgba(0,0,0,.5);
        top: 0px;
        left: 0px;
        width: 100%;
        height: 100%;
        z-index: 999;
        display: none;
    }

    #popup_resetpass {
        position: fixed;
        background-color: rgba(0,0,0,.5);
        top: 0px;
        left: 0px;
        width: 100%;
        height: 100%;
        z-index: 999;
        display: none;
    }
</style>
<div id="popup_pass">
    <div class="row" style="margin-left:10rem;">
        <div class="offset-lg-3" style="padding-top:5rem;width:500px">
            <button id="btnClose1" class="btn btn-default" style="float:right">
                <img src="~/Content/img/delete_50px.png" height="30" width="30" />
            </button>
            <div class="login-form" style="background-color:#fff; padding:2rem">
                <h3 class="text-center" style="margin-bottom:15px">Thay đổi mật khẩu</h3>
                <div>
                    <div class="group-input" >
                      
                        <input type="email" required="" id="email" class="form-control" value="Email">
                    </div>

                    <div class="group-input gi-check" id="ThongBao">

                    </div>

                    <button id="btnSubmit3" class="site-btn login-btn">Gửi</button>

                    <div class="group-input" style="margin-top:10px">
                        <a id="frmDangKy2" style="cursor:pointer" class="or-login btn">Or Create An Account</a>
                        <a id="frmDangNhap2" style="cursor:pointer" class="or-login">Or Login</a>
                    </div>

                </div>


                <div class="switch-login">
                </div>
            </div>
    </div>
</div>
</div>

<script>


    $('#frmDangKy2').click(function () {
        $('#popup_register').show();
        $("#popup_pass").hide();
        $("#popup_login").hide();
        $("#popup_resetpass").hide();
    });
    $('#frmDangNhap2').click(function () {
        $('#popup_register').hide();
        $("#popup_pass").hide();
        $("#popup_login").show();
        $("#popup_resetpass").hide();
    });
    $("#btnClose1").click(function () {
        $("#popup_pass").hide();

    });

    $("#btnSubmit3").click(function () {

        if ($("#email").val() != "") {
            $.ajax({
                type: 'post',
                url: '/Login/changepass',
                data: {
                    email1: $("#email").val(),
                },
                success: function (data) {
                    if (data.code == 200) {

                        alert("Chúng tôi đã gởi mật khẩu đến mail của bạn. Vui lòng kiểm tra");
                        $("#popup_pass").hide();
                        $("#popup_resetpass").show();
                    }

                }

            })
        }



    });


</script>

